---
import { SITE, LINKS } from "../config/site";

const year = new Date().getFullYear();
---

<footer class="mt-24 border-t border-[var(--color-border)] bg-[var(--color-surface)]">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-8 text-center text-sm text-[var(--color-muted)]">
    © {year} {SITE.brand.name} ·
    <a href="/privacy" class="hover:underline">Privacy</a> ·
    <a href="/terms" class="hover:underline">Terms</a> ·
    <a href={LINKS.mailto()} class="hover:underline">{SITE.contact.email}</a> ·
    <a href={LINKS.tel()} class="hover:underline">{SITE.contact.phoneDisplay}</a>
  </div>
</footer>
