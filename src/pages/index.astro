---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Calamon Luxury Apartments" description="Seaside luxury suites in Episkopi, Crete">
  <!-- Preload hero for better LCP -->
  <Fragment slot="head">
    <link rel="preload" as="image" href="/images/home/hero1.jpg" imagesrcset="/images/home/hero1.avif 1x, /images/home/hero1.jpg 1x" />
  </Fragment>

  <main>
    <!-- HERO -->
    <section class="relative min-h-[100svh]">
      <picture>
        <img src="/images/home/hero5.jpg" alt="" class="absolute inset-0 h-full w-full object-cover" fetchpriority="high" />
      </picture>

      <!-- Dark → transparent gradient for luxury feel / readability -->
      <div class="absolute inset-0 bg-[linear-gradient(to_top,rgba(0,0,0,.55),rgba(0,0,0,.25),rgba(0,0,0,.4))]"></div>

      <div class="relative z-10 flex min-h-[100svh] flex-col items-center justify-center text-center text-white px-6">
        <!-- keep or remove logo; if kept, fix height -->
        <img src="/images/logo/logo-4-white.png" alt="Calamon Logo" class="h-20" />

        <h1 class="mt-4 text-5xl sm:text-6xl font-serif tracking-tight">Calamon Apartments</h1>
        <p class="mt-3 text-lg sm:text-xl tracking-wide text-white/90">Luxury by the sea in Crete</p>

        <div class="mt-8">
          <a href="/apartments"
             class="inline-block rounded-full border border-white px-8 py-3 text-lg tracking-wide hover:bg-white hover:text-black transition">
            Explore Suites
          </a>
        </div>
      </div>
    </section>

    <!-- INTERIORS -->
    <section class="grid md:grid-cols-2 mt-2">
      <picture>
        <img src="/images/home/hero1.jpg" alt="Elegant interior" class="h-full w-full object-cover" loading="lazy" />
      </picture>

      <div class="flex items-center justify-center bg-[var(--color-bg)] p-10 sm:p-16">
        <div class="max-w-md">
          <h2 class="text-3xl sm:text-4xl font-serif">Calmness and olive trees</h2>
          <p class="mt-4 text-[var(--color-muted)] leading-relaxed">
            Relax in minimalistic rooms surrounded by olive trees.
          </p>
        </div>
      </div>
    </section>

    <!-- FEATURES (light, airy) -->
    <section class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-16">
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-12 text-center">
        <div>
          <h3 class="text-xl font-serif">Prime Location</h3>
          <p class="mt-1 text-[var(--color-muted)]">Episkopi beach, Sfakia, and southern Crete highlights within easy reach.</p>
        </div>
        <div>
          <h3 class="text-xl font-serif">Modern Comfort</h3>
          <p class="mt-1 text-[var(--color-muted)]">Fast Wi‑Fi, seamless check‑in, and thoughtfully designed spaces.</p>
        </div>
        <div>
          <h3 class="text-xl font-serif">Local Insights</h3>
          <p class="mt-1 text-[var(--color-muted)]">Handpicked beaches, hikes, and tavernas for a memorable stay.</p>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="text-center py-20 bg-[var(--color-surface)]">
      <h2 class="text-3xl sm:text-4xl font-serif">Plan Your Stay at Calamon</h2>
      <a
        href="/contact"
        class="mt-6 inline-block rounded-full border border-[var(--color-brand)] text-[var(--color-brand)]
               px-8 py-3 text-lg tracking-wide hover:bg-[var(--color-brand)] hover:text-white transition">
        Contact Us
      </a>
    </section>
  </main>
</Layout>
