---
import Layout from "../layouts/Layout.astro";
import {
  PawPrint,
  MapPin,
  Waves,
  Trees,
  Leaf,
  LifeBuoy,
  Calendar,
  Home,
  ExternalLink,
  Check,
  KeySquare,   // ✅ add this
} from "@lucide/astro";

// Replace with your real URLs (or pull from env)
const bookingUrl = "https://www.booking.com/hotel/gr/your-listing";
const airbnbUrl  = "https://www.airbnb.com/rooms/your-listing";

const schema = {
  "@context": "https://schema.org",
  "@type": "LodgingBusiness",
  "name": "Calamon Apartments",
  "url": "https://calamon.com",
  "sameAs": [bookingUrl, airbnbUrl]
};
---

<Layout
  title="Calamon Apartments — Peaceful Stays in Crete"
  description="Simple, quiet apartments in beautiful natural surroundings between Rethymno & Chania — large pool, pet‑friendly, and away from the crowds."
>
  <Fragment slot="head">
    <link rel="preload" as="image" href="/images/home/hero1.jpg" imagesrcset="/images/home/hero1.avif 1x, /images/home/hero1.jpg 1x" />
    <script type="application/ld+json">{JSON.stringify(schema)}</script>
  </Fragment>

  <main>
    <!-- HERO -->
    <section class="relative min-h-[90svh]">
      <img src="/images/home/hero5.jpg" alt="Pool and olive trees at Calamon Apartments, Crete" class="absolute inset-0 h-full w-full object-cover" fetchpriority="high" />
      <div class="absolute inset-0 bg-black/40"></div>

      <div class="relative z-10 flex min-h-[90svh] items-center justify-center px-6">
        <div class="max-w-3xl w-full text-center text-white">
          <img src="/images/logo/logo-4-white.png" alt="Calamon logo" class="mx-auto h-16 md:h-20" />
          <div class="mt-6 rounded-3xl bg-white/10 backdrop-blur-md border border-white/20 p-6 sm:p-8">
            <h1 class="text-4xl sm:text-5xl font-serif tracking-tight">Peaceful stays in Crete’s nature</h1>
            <p class="mt-3 text-base sm:text-lg text-white/90">
              Simple, welcoming apartments with a large pool — pet‑friendly, honest, and away from the crowds.
            </p>

            <!-- Badges -->
            <ul class="mt-5 flex flex-wrap justify-center gap-2 text-sm">
              <li class="inline-flex items-center gap-2 rounded-full border border-white/70 px-3 py-1">
                <Waves class="h-4 w-4" /> Large pool
              </li>
              <li class="inline-flex items-center gap-2 rounded-full border border-white/70 px-3 py-1">
                <PawPrint class="h-4 w-4" /> Pet friendly
              </li>
              <li class="inline-flex items-center gap-2 rounded-full border border-white/70 px-3 py-1">
                <Trees class="h-4 w-4" /> Quiet setting
              </li>
              <li class="inline-flex items-center gap-2 rounded-full border border-white/70 px-3 py-1">
                <Leaf class="h-4 w-4" /> Fair approach
              </li>
            </ul>

            <!-- CTAs -->
            <div class="mt-6 flex flex-wrap justify-center gap-3">
              <a href={bookingUrl} target="_blank" rel="noopener"
                 class="inline-flex items-center gap-2 rounded-full bg-white text-black px-6 py-3 text-base font-medium hover:opacity-90 transition">
                <Calendar class="h-5 w-5" />
                Booking.com — Availability
              </a>
              <a href={airbnbUrl} target="_blank" rel="noopener"
                 class="inline-flex items-center gap-2 rounded-full border border-white/70 text-white px-6 py-3 text-base hover:bg-white/10 transition">
                <Home class="h-5 w-5" />
                Airbnb — Availability
              </a>
            </div>

            <p class="mt-3 text-xs text-white/80">Live prices, reviews, and policies on Booking.com / Airbnb.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- WHY CHOOSE CALAMON -->
    <section class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-16">
      <h2 class="text-center text-3xl font-serif">Why guests choose Calamon</h2>
      <div class="mt-10 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="group rounded-2xl border border-[var(--color-border)] bg-[var(--color-surface)] p-6 hover:shadow-md transition">
          <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-full bg-[var(--color-bg)]">
            <Trees class="h-6 w-6" />
          </div>
          <h3 class="mt-4 text-lg font-semibold text-center">Peace & Nature</h3>
          <p class="mt-1 text-center text-[var(--color-muted)]">Quiet, uncrowded surroundings among olive trees.</p>
        </div>
        <div class="group rounded-2xl border border-[var(--color-border)] bg-[var(--color-surface)] p-6 hover:shadow-md transition">
          <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-full bg-[var(--color-bg)]">
            <Waves class="h-6 w-6" />
          </div>
          <h3 class="mt-4 text-lg font-semibold text-center">Large Pool</h3>
          <p class="mt-1 text-center text-[var(--color-muted)]">Morning dips, sunset swims, open views.</p>
        </div>
        <div class="group rounded-2xl border border-[var(--color-border)] bg-[var(--color-surface)] p-6 hover:shadow-md transition">
          <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-full bg-[var(--color-bg)]">
            <PawPrint class="h-6 w-6" />
          </div>
          <h3 class="mt-4 text-lg font-semibold text-center">Pet Friendly</h3>
          <p class="mt-1 text-center text-[var(--color-muted)]">We welcome well‑behaved pets (simple rules).</p>
        </div>
        <div class="group rounded-2xl border border-[var(--color-border)] bg-[var(--color-surface)] p-6 hover:shadow-md transition">
          <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-full bg-[var(--color-bg)]">
            <Leaf class="h-6 w-6" />
          </div>
          <h3 class="mt-4 text-lg font-semibold text-center">Honest & Simple</h3>
          <p class="mt-1 text-center text-[var(--color-muted)]">Straightforward stays, no fuss, no noise.</p>
        </div>
      </div>
    </section>

    <!-- ABOUT -->
    <section class="grid md:grid-cols-2 items-stretch">
      <img src="/images/home/hero1.jpg" alt="Quiet olive‑tree corner at Calamon" class="h-full w-full object-cover" loading="lazy" />
      <div class="flex items-center bg-[var(--color-bg)] p-10 sm:p-16">
        <div class="max-w-md">
          <h2 class="text-3xl sm:text-4xl font-serif">Calm, simple, welcoming</h2>
          <p class="mt-4 text-[var(--color-muted)] leading-relaxed">
            Calamon isn’t a luxury resort — it’s a relaxed base in beautiful natural scenery.
            Unwind by the pool, wander among olive trees, and sleep in quiet. Bring your pets and take things at your own pace.
          </p>
        </div>
      </div>
    </section>

    <!-- LOCATION -->
    <section class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8 py-16">
      <h2 class="text-center text-3xl font-serif">A beautiful base between Rethymno & Chania</h2>
      <p class="mt-3 max-w-3xl mx-auto text-center text-[var(--color-muted)]">
        Close to Kourna Lake, Georgioupolis, Vrysses, and the wide sandy beach of Petre — where scuba lessons are offered.
      </p>
      <div class="mt-8 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6">
        <div class="rounded-xl border border-[var(--color-border)] bg-[var(--color-surface)] p-5">
          <div class="flex items-center gap-3">
            <MapPin class="h-5 w-5" />
            <h3 class="font-semibold">Between two cities</h3>
          </div>
          <p class="mt-2 text-[var(--color-muted)]">Easy day‑trips to both Rethymno & Chania.</p>
        </div>
        <div class="rounded-xl border border-[var(--color-border)] bg-[var(--color-surface)] p-5">
          <div class="flex items-center gap-3">
            <Waves class="h-5 w-5" />
            <h3 class="font-semibold">Kourna Lake</h3>
          </div>
          <p class="mt-2 text-[var(--color-muted)]">Freshwater lake with mountain backdrop.</p>
        </div>
        <div class="rounded-xl border border-[var(--color-border)] bg-[var(--color-surface)] p-5">
          <div class="flex items-center gap-3">
            <MapPin class="h-5 w-5" />
            <h3 class="font-semibold">Georgioupolis & Vrysses</h3>
          </div>
          <p class="mt-2 text-[var(--color-muted)]">Seaside charm & traditional village life.</p>
        </div>
        <div class="rounded-xl border border-[var(--color-border)] bg-[var(--color-surface)] p-5">
          <div class="flex items-center gap-3">
            <LifeBuoy class="h-5 w-5" />
            <h3 class="font-semibold">Petre Beach (Scuba)</h3>
          </div>
          <p class="mt-2 text-[var(--color-muted)]">Wide sandy beach; scuba lessons available.</p>
        </div>
      </div>
    </section>

    <!-- WHAT TO EXPECT -->
    <section class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8 pb-12">
      <div class="rounded-2xl border border-[var(--color-border)] bg-[var(--color-surface)] p-6 sm:p-10">
        <h2 class="text-2xl sm:text-3xl font-serif">What to expect</h2>
        <ul class="mt-5 grid grid-cols-1 sm:grid-cols-2 gap-3 text-[var(--color-muted)]">
          <li class="flex items-start gap-2">
            <Check class="mt-1 h-5 w-5" />
            Thoughtfully simple apartments (kitchen/kitchenette, AC, Wi‑Fi)
          </li>
          <li class="flex items-start gap-2">
            <Check class="mt-1 h-5 w-5" />
            Large shared pool and sunny loungers
          </li>
          <li class="flex items-start gap-2">
            <Check class="mt-1 h-5 w-5" />
            Pet‑friendly stays (on request; simple rules)
          </li>
          <li class="flex items-start gap-2">
            <Check class="mt-1 h-5 w-5" />
            Quiet surroundings — not a party scene
          </li>
          <li class="flex items-start gap-2">
            <Check class="mt-1 h-5 w-5" />
            Free parking & easy self check‑in
          </li>
          <li class="flex items-start gap-2">
            <Check class="mt-1 h-5 w-5" />
            Live prices & availability via Booking.com / Airbnb
          </li>
        </ul>
        <div class="mt-6 flex flex-wrap gap-3">
          <a href={bookingUrl} target="_blank" rel="noopener"
             class="inline-flex items-center gap-2 rounded-full border border-[var(--color-brand)] text-[var(--color-brand)] px-6 py-3 hover:bg-[var(--color-brand)] hover:text-white transition">
            <Calendar class="h-5 w-5" />
            Booking.com — Availability
          </a>
          <a href={airbnbUrl} target="_blank" rel="noopener"
             class="inline-flex items-center gap-2 rounded-full border border-[var(--color-border)] text-[var(--color-text)] px-6 py-3 hover:bg-[var(--color-text)] hover:text-white transition">
            <Home class="h-5 w-5" />
            Airbnb — Availability
          </a>
        </div>
      </div>
    </section>

    <!-- FAQ -->
    <section class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 pb-6">
      <h2 class="text-center text-2xl sm:text-3xl font-serif">Good to know</h2>
      <div class="mt-6 space-y-3">
        <details class="group rounded-xl border border-[var(--color-border)] bg-[var(--color-surface)] p-5">
          <summary class="cursor-pointer list-none font-medium flex items-center justify-between">
            <span class="inline-flex items-center gap-2"><PawPrint class="h-5 w-5" /> Pet policy</span>
            <span aria-hidden="true" class="transition group-open:rotate-180">⌄</span>
          </summary>
          <p class="mt-3 text-[var(--color-muted)]">Well‑behaved pets are welcome. Please mention your pet when booking; simple house rules apply.</p>
        </details>
        <details class="group rounded-xl border border-[var(--color-border)] bg-[var(--color-surface)] p-5">
          <summary class="cursor-pointer list-none font-medium flex items-center justify-between">
            <span class="inline-flex items-center gap-2"><KeySquare class="h-5 w-5" /> Check‑in / Check‑out</span>
            <span aria-hidden="true" class="transition group-open:rotate-180">⌄</span>
          </summary>
          <p class="mt-3 text-[var(--color-muted)]">We offer easy self check‑in. Exact times and instructions are provided on Booking.com / Airbnb.</p>
        </details>
      </div>
    </section>

    <!-- FINAL CTA -->
    <section class="text-center py-20 bg-[var(--color-surface)]">
      <h2 class="text-3xl sm:text-4xl font-serif">Ready for a peaceful stay?</h2>
      <p class="mt-2 text-[var(--color-muted)]">Check live availability, prices, reviews, and policies on the platforms below.</p>
      <div class="mt-6 flex items-center justify-center gap-3">
        <a href={bookingUrl} target="_blank" rel="noopener"
           class="inline-flex items-center gap-2 rounded-full border border-[var(--color-brand)] text-[var(--color-brand)] px-8 py-3 text-lg tracking-wide hover:bg-[var(--color-brand)] hover:text-white transition">
          <ExternalLink class="h-5 w-5" />
          Booking.com
        </a>
        <a href={airbnbUrl} target="_blank" rel="noopener"
           class="inline-flex items-center gap-2 rounded-full border border-[var(--color-border)] text-[var(--color-text)] px-8 py-3 text-lg tracking-wide hover:bg-[var(--color-text)] hover:text-white transition">
          <Home class="h-5 w-5" />
          Airbnb
        </a>
      </div>
    </section>
  </main>
</Layout>
