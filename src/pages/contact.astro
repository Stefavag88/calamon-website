---
import { Image as UnpicImage } from "@unpic/astro";
import { Image } from "astro:assets";
import hero6 from "../assets/home/hero6.jpg";
import whatsappIcon from "../assets/svg/whatsapp.svg";
import viberIcon from "../assets/svg/viber.svg";
import bookingIcon from "../assets/svg/booking.svg";
import airbnbIcon from "../assets/svg/airbnb.svg";
import Layout from "../layouts/Layout.astro";
import {
  Mail,
  Phone,
  Calendar,
  Users,
  Send,
  CheckCircle2,
  AlertTriangle,
  PawPrint,
  MapPin,
} from "@lucide/astro";

// CMS
import contactJson from "../content/cms/contact.json";

// config
import { SITE, LINKS } from "../config/site";
import { MAPS, LOCATION } from "../config/site";

// success / error query handling
const q = new URL(Astro.request.url).searchParams;
const success = q.get("success") === "1";
const error = q.get("error") === "1";

const bookingUrl = LINKS.booking;
const airbnbUrl = LINKS.airbnb;

// Map URLs (embed is built from coords if present; otherwise from a name query)
const mapsViewUrl = MAPS.view(); // your existing "Open in Google Maps" deeplink
const embedUrl =
  LOCATION?.lat && LOCATION?.lng
    ? `https://www.google.com/maps?q=${LOCATION.lat},${LOCATION.lng}&z=14&output=embed`
    : `https://www.google.com/maps?q=${encodeURIComponent(`${SITE?.brand ?? "Calamon Apartments"} ${LOCATION?.label ?? "Episkopi, Crete"}`)}&z=14&output=embed`;
---

<Layout
  title="Contact Calamon"
  description="Get in touch to plan your peaceful stay between Rethymno & Chania."
>
  <main>
    <!-- Hero -->
    <section class="relative h-[40svh] overflow-hidden">
      <UnpicImage
        src={hero6.src}
        alt="Pool and olive trees at Calamon Apartments, Crete"
        layout="fullWidth"
        priority
        placeholder="blurhash"
        class="absolute inset-0 h-full w-full object-cover"
      />
      <div class="absolute inset-0 bg-black/40"></div>

      <div
        class="relative z-10 h-full flex items-center justify-center text-center px-6"
      >
        <div class="max-w-2xl">
          <h1 class="text-white text-4xl sm:text-5xl font-serif">
            {contactJson.headline}
          </h1>
          <p class="mt-3 text-white/90">{contactJson.subheadline}</p>
        </div>
      </div>
    </section>

    <!-- Primary: instant messaging -->
    <section class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <div
        class="my-12 rounded-2xl bg-[var(--color-bg)]/60 p-8 text-center shadow-[var(--shadow-soft)]"
      >
        <h2 class="text-2xl sm:text-3xl font-serif font-semibold">
          Message us instantly
        </h2>
        <p class="mt-2 text-[var(--color-muted)]">
          Quick questions, availability, or local tips — reach us fast on chat:
        </p>

        <div class="mt-6 flex flex-wrap justify-center gap-4">
          <!-- WhatsApp -->
          <a
            href={LINKS.whatsapp()}
            target="_blank"
            rel="noopener"
            class="inline-flex items-center gap-2 rounded-full px-6 py-3 text-white text-lg font-medium shadow-lg bg-[#25D366] hover:scale-105 hover:shadow-xl transition"
            aria-label="Chat on WhatsApp"
          >
            <Image
              src={whatsappIcon}
              alt="whatsapp"
              width={40}
              loading="lazy"
              decoding="async"
            />
            WhatsApp
          </a>

          <!-- Viber -->
          <a
            href={LINKS.viber()}
            class="inline-flex items-center gap-2 rounded-full px-6 py-3 text-white text-lg font-medium shadow-lg bg-[#7360F2] hover:scale-105 hover:shadow-xl transition"
            aria-label="Chat on Viber"
          >
            <Image
              src={viberIcon}
              alt="viber"
              width={40}
              loading="lazy"
              decoding="async"
            />
            Viber
          </a>
        </div>

        <p class="mt-3 text-xs text-[var(--color-muted)]">
          WhatsApp opens Web/Desktop on computers · Viber requires the app
        </p>
      </div>
    </section>

    <!-- Contact + quick links -->
    <section class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8 py-6">
      <!-- Banners -->
      {
        success && (
          <div
            class="mb-6 flex items-start gap-3 rounded-lg bg-emerald-50 px-4 py-3 text-emerald-900 shadow-[var(--shadow-soft)]"
            aria-live="polite"
            role="status"
          >
            <CheckCircle2 class="mt-0.5 h-5 w-5" />
            <div>
              <strong>
                {contactJson.bannerSuccess ||
                  "Thank you — your message has been sent."}
              </strong>
            </div>
          </div>
        )
      }
      {
        error && (
          <div
            class="mb-6 flex items-start gap-3 rounded-lg bg-red-50 px-4 py-3 text-red-900 shadow-[var(--shadow-soft)]"
            aria-live="assertive"
            role="alert"
          >
            <AlertTriangle class="mt-0.5 h-5 w-5" />
            <div>
              <strong>
                {contactJson.bannerError || "Something went wrong."}
              </strong>
            </div>
          </div>
        )
      }

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Form -->
        <div
          class="lg:col-span-2 rounded-2xl bg-[var(--color-bg)]/60 p-8 shadow-[var(--shadow-soft)]"
        >
          <h2 class="text-2xl sm:text-3xl font-serif font-semibold mb-12">
            Or fill this contact form
          </h2>

          <form
            name="contact"
            method="POST"
            data-netlify="true"
            netlify-honeypot="website"
            action="/contact?success=1"
          >
            <input type="hidden" name="form-name" value="contact" />
            <input
              type="text"
              name="website"
              class="hidden"
              tabindex="-1"
              autocomplete="off"
              aria-hidden="true"
            />

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
              <div>
                <label for="name" class="block text-sm font-medium"
                  >Full name</label
                >
                <div class="mt-2 relative">
                  <input
                    id="name"
                    name="name"
                    type="text"
                    required
                    autocomplete="name"
                    class="peer w-full rounded-lg border border-[var(--color-border)] bg-white px-3 py-2 outline-none focus:ring-2 focus:ring-[var(--color-brand)]"
                    placeholder="First and last name"
                  />
                  <Users
                    class="pointer-events-none absolute right-3 top-1/2 -translate-y-1/2 h-4 w-4 text-[var(--color-muted)] peer-focus:text-[var(--color-brand)]"
                  />
                </div>
              </div>

              <div>
                <label for="email" class="block text-sm font-medium"
                  >Email</label
                >
                <div class="mt-2 relative">
                  <input
                    id="email"
                    name="email"
                    type="email"
                    required
                    autocomplete="email"
                    class="peer w-full rounded-lg border border-[var(--color-border)] bg-white px-3 py-2 outline-none focus:ring-2 focus:ring-[var(--color-brand)]"
                    placeholder="you@example.com"
                  />
                  <Mail
                    class="pointer-events-none absolute right-3 top-1/2 -translate-y-1/2 h-4 w-4 text-[var(--color-muted)] peer-focus:text-[var(--color-brand)]"
                  />
                </div>
              </div>

              <div>
                <label for="phone" class="block text-sm font-medium"
                  >Phone (optional)</label
                >
                <div class="mt-2 relative">
                  <input
                    id="phone"
                    name="phone"
                    type="tel"
                    autocomplete="tel"
                    inputmode="tel"
                    pattern="^[0-9+\\s()-]{6,}$"
                    class="peer w-full rounded-lg border border-[var(--color-border)] bg-white px-3 py-2 outline-none focus:ring-2 focus:ring-[var(--color-brand)]"
                    placeholder="+30 xxx xxx xxxx"
                  />
                  <Phone
                    class="pointer-events-none absolute right-3 top-1/2 -translate-y-1/2 h-4 w-4 text-[var(--color-muted)] peer-focus:text-[var(--color-brand)]"
                  />
                </div>
              </div>

              <div>
                <label for="dates" class="block text-sm font-medium"
                  >Preferred dates (optional)</label
                >
                <div class="mt-2 relative">
                  <input
                    id="dates"
                    name="dates"
                    type="text"
                    autocomplete="off"
                    class="peer w-full rounded-lg border border-[var(--color-border)] bg-white px-3 py-2 outline-none focus:ring-2 focus:ring-[var(--color-brand)]"
                    placeholder="e.g., 15–20 Sept"
                  />
                  <Calendar
                    class="pointer-events-none absolute right-3 top-1/2 -translate-y-1/2 h-4 w-4 text-[var(--color-muted)] peer-focus:text-[var(--color-brand)]"
                  />
                </div>
              </div>
            </div>

            <div class="mt-5">
              <label for="message" class="block text-sm font-medium"
                >Message</label
              >
              <textarea
                id="message"
                name="message"
                rows={6}
                required
                class="mt-2 w-full rounded-lg border border-[var(--color-border)] bg-white px-3 py-2 outline-none focus:ring-2 focus:ring-[var(--color-brand)]"
                placeholder="Tell us a bit about your trip, number of guests, pets, special requests…"
              ></textarea>
              <p
                class="mt-2 text-xs text-[var(--color-muted)] inline-flex items-center gap-1"
              >
                <PawPrint class="h-4 w-4" /> Bringing a pet? Let us know here.
              </p>
            </div>

            <div class="mt-5 flex items-start gap-3">
              <input
                id="consent"
                name="consent"
                type="checkbox"
                required
                class="mt-1 h-4 w-4 rounded border-[var(--color-border)]"
              />
              <label for="consent" class="text-sm text-[var(--color-muted)]">
                I consent to having this website store my submitted information
                so we can respond.
              </label>
            </div>

            <div class="mt-12 flex items-center justify-center">
              <button
                type="submit"
                class="inline-flex items-center gap-2 rounded-full border border-[var(--color-brand)] text-[var(--color-brand)]
                       px-8 py-3 text-lg tracking-wide hover:bg-[var(--color-brand)] hover:text-white transition"
              >
                <Send class="h-5 w-5" /> Send message
              </button>
            </div>
          </form>
        </div>

        <!-- Side column -->
        <aside class="lg:col-span-1 space-y-6">
          <!-- Booking & reviews -->
          <div
            class="rounded-2xl bg-[var(--color-bg)]/60 p-8 shadow-[var(--shadow-soft)]"
          >
            <h2 class="text-lg font-semibold">Booking & reviews</h2>
            <p class="mt-1 text-center text-[var(--color-muted)]">
              Live prices, availability, and policies:
            </p>

            <div class="mt-4 flex flex-col gap-3">
              <a
                href={bookingUrl}
                target="_blank"
                rel="noopener"
                class="inline-flex items-center justify-center gap-2 rounded-full px-2 py-2.5 bg-white text-[var(--color-text)] shadow hover:shadow-md transition"
              >
                <Image
                  src={bookingIcon}
                  alt="booking"
                  width={30}
                  loading="lazy"
                  decoding="async"
                />
                Booking.com
              </a>

              <a
                href={airbnbUrl}
                target="_blank"
                rel="noopener"
                class="inline-flex items-center justify-center gap-2 rounded-full px-5 py-2.5 bg-white text-[var(--color-text)] shadow hover:shadow-md transition"
              >
                <Image
                  src={airbnbIcon}
                  alt="airbnb"
                  width={30}
                  loading="lazy"
                  decoding="async"
                />
                Airbnb
              </a>
            </div>
          </div>

          <!-- Other ways to reach us -->
          <div
            class="rounded-2xl bg-[var(--color-bg)]/60 p-8 shadow-[var(--shadow-soft)]"
          >
            <h2 class="text-lg font-semibold">Other ways to reach us</h2>
            <div class="mt-4 flex flex-col gap-3">
              <a
                href={`mailto:${SITE.contact.email}`}
                class="inline-flex items-center justify-center gap-2 rounded-full px-5 py-2.5 bg-white text-[var(--color-text)] shadow hover:shadow-md transition"
              >
                <Mail class="h-4 w-4" />
                {SITE.contact.email}
              </a>
              <a
                href={`tel:${SITE.contact.e164Plus}`}
                class="inline-flex items-center justify-center gap-2 rounded-full px-5 py-2.5 bg-white text-[var(--color-text)] shadow hover:shadow-md transition"
              >
                <Phone class="h-4 w-4" />
                {SITE.contact.e164Digits}
              </a>
            </div>
          </div>

          <!-- Location with lazy-loaded map -->
          <div
            class="rounded-2xl bg-[var(--color-bg)]/60 p-8 shadow-[var(--shadow-soft)]"
          >
            <h2 class="text-lg font-semibold">Find us easily on the map</h2>

            <iframe
              src="https://www.google.com/maps?q=Calamon+Apartments,+Episkopi,+Crete&z=14&output=embed"
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              class="mt-4 w-full aspect-[4/3] rounded-xl border border-[var(--color-border)]"
            ></iframe>
          </div>
        </aside>
      </div>
    </section>
  </main>
</Layout>
